{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2015",
    "allowJs": false,
    "lib": ["es2019", "dom", "dom.iterable"],
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "paths": {
      "~/*": ["./app/*"]
    }
  },
  "include": ["app", "api", "migrations", "remix.env.d.ts"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
